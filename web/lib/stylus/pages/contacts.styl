    display flex
    flex-direction column
    
    &__img-item
        display flex
        align-items center
        
        +below(mb)
            margin 10px 0 30px 17px
    
        img
            margin-right 15px

    &__header-item
        display block
        margin-bottom 60px
        
        +below(mb)
            margin 0 0 0 30px
