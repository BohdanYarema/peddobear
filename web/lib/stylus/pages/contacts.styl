        &:nth-child(2)
            margin-left 100px
        
        &:nth-child(3)
            width 300px
            
        h4
            regular-16()
            color #808080
            
            span
                font-weight 700
    
    &__item
        display flex
        align-items center
        margin-top 10px
        
        +below(mb)
            margin-left 10px
        
        a
            regular-16()
            color #fff
            
        img
            margin 0 20px
            
