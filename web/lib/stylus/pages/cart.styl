.cart-page
    gradient()
    
    +below(tb)
        min-height 100vh
        
    +above-h(hz)
        min-height 100vh

.main-container-cart
    position: relative
    display block
    width 100%
    min-height 100vh
    overflow hidden

    +below(tb)
        min-height auto
        
    +above-h(hz)
        min-height auto
        overflow auto
        
.cart-block
    display flex
    position relative
    padding 80px 20px 0 20px
    flex-direction column
    
    +below(tb)
        padding 50px 20px 0 20px
    
    &__header
        display flex 
        width 100%
        margin-top 10px
        
        h1
            title-40()
            color #fff
            text-transform uppercase
            position relative
            
            +below(mbb)
                title-35()
            
            span
                font-weight 300
            
            &:after
                content ""
                display block
                content: "";
                display: block;
                position: absolute;
                top: 70px;
                width: 100px;
                height: 4px;
                background-color: #fff;
                
                +below(mb)
                    top 55px
                    height 2px

    &__cart
        display block
        position relative
        margin-top 20px
        color #fff
        regular-16()
        text-transform uppercase
        
        +below(mb)
            regular-12()
            color #fff

.column-labels
    display flex
    justify-content flex-start
    flex-direction row
    margin-bottom 50px
    position relative
    
    &:after
        content ""
        display block
        width 100%
        position absolute
        left 0
        bottom -20px
        height 2px
        background-color #a4a4a4ff
    
.product-details
    width 45%
    margin auto

    +below(tb)
        width 35%
        
    +below(mb)
        width 0

.product-price
    width 15%
    text-align center
    margin auto
    
    +below(mb)
        display none
        width 0
    
.product-quantity 
    width 10%
    text-align center
    margin auto
               
.currency
    regular-20() !important
    color #a4a4a4ff
    font-weight 600    
    font-family Verdana,sans-serif !important
    
    +below(mb)
        regular-14()
        color #a4a4a4ff

.product-removal
    width 9%
    text-align center
    margin auto

.product-line-price
    width 12%
    text-align center
    margin auto
    
.product
    display flex
    flex-direction row
    justify-content flex-start
    color #fff
    margin-bottom 35px
    position relative
    align-items center
    
    
    &:after
        content ""
        display block
        width 100%
        position absolute
        left 0
        bottom -17.5px
        height 1px
        background-color #a4a4a4ff
    
    &__item
        display flex
        flex-direction row
        width 45%
        align-items center
        
        +below(tb)
            width 40%
                
        +below(mb)
            flex-direction column
            width 20%

        &__image
            display block
            margin-left 30px
            
            +below(mb)
                margin-left 0
            
            img
                width 45px

        &__details
            margin-left 30px
            
            +below(mb)
                margin-left 0
            
            p
                regular-16()
                font-family Verdana,sans-serif
                font-weight 100
                
                span
                    font-weight 600
                    
                    +below(mb)
                        display none
        
    &__price
        width 15%
        text-align center
        margin auto
        font-family Verdana,sans-serif
        
        +below(mb)
            display none
        
    &__quantity
        width 10%
        text-align center
        display flex
        margin auto
        font-family Verdana,sans-serif
        
        +below(mb)
            flex-direction row
            margin 0
            margin-left 10px
            width 40%
            
        
        input
            border none
            text-align center
            color #fff
            background-color transparent
            cursor text
            height: 30px
            width: 40px
            outline 0
            -webkit-appearance: none
            regular-16()
            line-height 40px
            font-family Verdana,sans-serif
            
            +below(mb)
                width 30px
    
        button[class*=btn] 
            width: 30px
            height: 30px
            background-color: transparent
            border: none
            cursor: pointer
            outline 0
            -webkit-appearance button
            title-20()
            font-family Verdana,sans-serif
            color #999
            text-align center
            font-weight 500
            line-height 30px
            
    &__line-price
        width 12%
        text-align center
        margin auto
        font-family Verdana,sans-serif
        
        +below(mb)
            margin 0
            width 20%
        
    &__removal
        width 9%
        text-align center
        margin auto
        line-height 10px
        
        a
            cursor pointer
            padding 15px
            
        .remove-krest:hover 
            -moz-transform rotate(30deg)
            -ms-transform rotate(30deg)
            -webkit-transform rotate(30deg)
            -o-transform rotate(30deg)
            transform rotate(30deg)

.totals
    display block
    position relative
    
    +below(tb)
        margin-bottom 26px
    
    &__titles
        display flex
        justify-content flex-end
        width 100%
        
        .titl
            display flex
            
            +below(mb)
                &:nth-child(2)
                    margin 0 10px 0 80px
            
            h4
                title-16()
                color #fff
                text-transform uppercase
                font-weight 300
                
                +below(mb)
                    title-12()
                    color #fff
                
                span
                    font-weight 600
                
        .titles-wrapper
            display flex
            flex-direction row
            justify-content space-between
            width 500px
            position relative
            
            +below(tb)
                width 427px
            
            &:after
                content ""
                display block
                width 100%
                height 2px
                background-color #fff
                position absolute
                bottom 0
    &__values
        display flex
        width 100%
        justify-content flex-end
        
    .values-wrapp
        display flex
        flex-direction row
        justify-content space-between
        width 500px
        position relative
        
        +below(tb)
            width 427px
        
    .radio-delivery
        display flex
        
    .radio-wrapp
        display flex
        flex-direction row
        justify-content space-between
        height 30px
        text-align center
        align-items center
        margin 10px 20px 20px 20px
    
    #qwe 
        //transform:scale(1.7)
        //opacity:0.9
        cursor:pointer
        display block
        //padding 5px
        width 20px
        height 20px
        
    .radio-labeles-wrapp
        display flex
        flex-direction row
        
        &__label
            display flex
            width 60px
            height 30px
            background-color #41454a
            text-align center
            align-items center
            justify-content center
            
            &:first-child
                margin-right 10px
            
            p
                regular-12()
                color #fff
                text-transform none
                display flex
                       
    .radio-delivery
        display flex
        flex-direction column
        
    .common-quantity
    .common-price
        display flex
        justify-content center
        margin-right 10px
        font-family Verdana, sans-serif !important
        margin-top 15px
        line-height 15px
        
    .common-price
        position relative
        
        .delivery-label
            position absolute
            top 45px
            regular-10()
            text-transform none
            width 150px
            color #fff
            left -38px
            
            
    .buttons-links
        display flex
        width 100%
        justify-content flex-end
        margin-top 40px
        
    .cart-next-btn
        next-btn()
    
    .cart-prev-btn
        previous-btn()
        margin-right 58px
        
        +below(mb)
            margin-right 37px
    
    .ted-fon
        position absolute
        display block
        bottom 20px
        left -80px
        
        +below(tb)
            left 0
            bottom -29px
            
        +below(mb)
            display none

.cart-empty
    display none
    flex-direction column
    justify-content center
    align-items center
    margin-top 20px
    
    +below(tb)
        margin 70px 0
    
    &__header
        display block
        position relative
        
        h1
            regular-24()
            color #999
            text-transform uppercase
    
        &:before
            content ""
            display block
            width 90%
            height 1px
            background-color #999
            position absolute
            left 0
            right 0
            margin auto
            top 0
            
    
    &__logo
        margin-top 15px
        
    &__subtext
        p
            regular-24()
            color #fff
            text-transform uppercase
    
    &__btn
        display block
        background-color #333
        opacity .8
        width 250px
        height 50px
        text-align center
        margin-top 10px
        
        p
            regular-16()
            color #fff
            text-transform uppercase
            
.product__price:after
.product__line-price:after
.common-price:after
    content " $"
    color #a4a4a4ff
    font-weight 600    
    font-family Verdana,sans-serif !important