    display flex
    align-items center
    min-height 60px
    
    +below(mb)
        justify-content center

.text-icon
    display flex
    min-width 20px

    p
        regular-10()
        color #fff
        letter-spacing 1px
        
        +below(mb)
            regular-12()
            color #fff
        
        span
            font-weight 800
        
            
.background-ted
    display block
    position absolute
    top 40px
    left 0  
    
    +below(mb)
        display none
        
