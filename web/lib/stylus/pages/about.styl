    display flex
    align-items center
    flex-direction column
    width 200px
    
    +below(mb)
        margin-bottom 30px
    
    &:nth-child(2)
        margin 0 50px
        position relative 
        
        +below(tb)
            margin 0 18px
            
        +below(mb)
            margin 0
            
        
        &:after
        &:before
            content ""
            display block
            width 1px
            height 90%
            right -21px
            background-color #fff
            position absolute
            top 0
            bottom 0
            margin auto
            
            +below(tb)
                right -7px
                
            +below(mb)
                display none
            
        &:before
            left -207px
            
            +below(tb)
                left -150px
        
