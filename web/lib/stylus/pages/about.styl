.about-page
    gradient()
    
    +below(tb)
        height 100vh
        
    +below(mb)
        height auto

    +above-h(hz)
        min-height 100vh

.main-container-about
    position: relative
    display block
    width 100%
    min-height 100vh
    overflow hidden

    +above-h(hz)
        min-height auto
        overflow auto
        
    +below(tb)
        min-height auto
        
.block-content
    display flex
    flex-direction row
    justify-content space-between
    padding 80px 20px 0 20px
    transition: ease-in-out 0.25s;
    
    +below(tb)
        padding 50px 20px 0 20px
    
    +below(mb)
        flex-direction column

.left-part
.right-part
    display flex
    width 50%
    align-items flex-start
    padding-top 15px
    
    +below(tb)
        padding-top 0
        
    +below(mb)
        width 100%
    
    &__header
        display flex
        justify-content flex-start
        align-items flex-start
        width 100%
        position relative
        
        
        &:after
            content ""
            display block
            position absolute
            bottom 0
            width 100px
            height 4px
            background-color #fff
            
            +below(mb)
                height 2px
        
        h1
            regular-30()
            text-transform uppercase
            font-size 45px
            color #fff
            
            +below(mb)
                font-size 30px
            
            span
                title-30()
                text-transform uppercase
                font-size 45px
                color #fff
                
                +below(mb)
                    font-size 30px

.background-ted-mob
    display none
    position absolute
    top 53px
    left 120px  
    
    img
        width 174px
    
    +below(mb)
        display block

.right-part
    position relative
    display block
    
    &__header
        justify-content flex-end
        margin-bottom 155px
        
        +below(tb)
            margin-bottom 250px
            
        +below(mb)
            justify-content flex-start
            margin-bottom 0
        
        &:after
            right 0 !important
            
            +below(mb)
                left 0
            
    &__icon-text
        display flex
        justify-content space-between
        
        +below(mb)
            margin 0 50px 0 50px
        
    &__footer
        display block
        width 100%
        margin-top 40px
        position relative
        
        +below(tb)
            margin-top 20px
            
        +below(mb)
            margin 60px 0 40px 0
        
        &:before
            content ""
            position absolute
            display block
            width 1px
            height 40px
            top 0
            left 0
            background-color #fff
            
        &:after
            content ""
            position absolute
            display block
            width 40px
            height 1px
            left 0
            top 0
            background-color #fff

        h4
            title-12()
            color #fff
            letter-spacing .5px
            line-height 16px
            padding 15px 0 0 15px
            

    &__next-btn
        next-btn()
        margin-right 15px

