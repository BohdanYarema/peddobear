.slick-prev
.slick-next
  position absolute
  bottom -30px
  // left 25px
  margin auto
  display block
  width 40px
  height 40px
  z-index 10
  font-size 0
  border none
  background-color inherit
  outline 0 !important
  
.slick-next
  left 50%
  margin-left 40px
  
.slick-prev
  right 50%
  margin-right 40px
    
.slick-prev:after
.slick-next:after
  content ''
  position absolute
  top 50%
  margin-top -4px
  width 10px
  height 10px
  border solid #cecece
  border-width 0 2px 2px 0
  outline 0 !important
  
.slick-prev:after
  transform rotate(135deg)
  left 50%
  margin-left -4px
  
.slick-next:after
  transform rotate(315deg)
  right 50%
  margin-right -4px