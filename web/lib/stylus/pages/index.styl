.main-container
    position relative
    display block
    width 100%
    height 100vh
    padding-top 80px
    overflow hidden
    
    .wrapper
        position absolute
        top 0
        bottom 0
        right 0
        left: 0
        z-index: 99
    
    &__inner
        width 100%
        height 100%
        display flex
        flex-direction row
        justify-content center
        align-items center
        
        
    &__content
        display flex
        flex-direction column
        justify-content center
        align-items center
        width 500px
        text-align center
        
        img
            width 300px
            
        .start-button
            outline none
            border none
            display block
            background-color #000
            width 200px
            height 50px
            color #fff
            font-size 20px
            font-family 'Raleway', sans-serif
            font-weight 400
            text-transform uppercase
            text-align center
            -webkit-transition: 0.3s ease
            -moz-transition: 0.3s ease
            -o-transition: 0.3s ease
            transition: 0.3s ease
            line-height 50 px
            cursor: pointer
            letter-spacing .4px
            opacity .6 !important
            margin-top 50px
            
            &:hover
                opacity 1 !important
                
                +below(tb)
                    opacity .6
                
