*
*:before
*:after
  box-sizing border-box

body
  margin 0 auto
  max-width 1920px

ul
  list-style-type none
  padding 0
  margin 0

a
  text-decoration none
  outline none

.wrapper
  display block
  margin 0 auto
  max-width 964px
  width 100%
  min-height 100%
  position relative

  +above(hd)
    max-width 1200px

  +below(tb)
    max-width 728px
    
  +below(mb)
    max-width 100%
    // background pink 
    
.slick-active
.slick-initialized
.slick-slide
.slick-current
  outline 0 !important
  
main {
  position: relative;
}

.preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  z-index: 9999;
  
  &:after {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    content: "";
    background: orange;
    transform: translateX(-100%);
    transition: transform .3s ease;
  }
  
  &.loaded {
    &:after {
      transform: translateX(0);
    }
  }
}

main {
  transition: opacity .5s linear;
}

main.loading {
  opacity: 0;
}

.loading-indicator {
  display: block;
  width: 54px;
  height: 54px;
  border-radius: 100px;
  border: 3px solid gray;
  border-right: 3px solid orange;
  margin: 0 auto;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  0% {
    transform: rotate(0);
  } 100% {
    transform: rotate(360deg);
  }
}