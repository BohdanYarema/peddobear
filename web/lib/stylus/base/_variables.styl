gradient()
    background: #000000;  
    background: -webkit-linear-gradient(135deg, #434343, #000000);
    background: linear-gradient(135deg, #434343, #000000); 
    
next-btn()
    display flex
    justify-content flex-end
    align-items center
    margin-top 20px
    
    +above-h(hz)
        margin-bottom 40px
    
    p 
        display flex
        color #fff !important
        regular-18()
        margin 0
        text-transform uppercase
        
        span
            width 0
            height 0
            border-top 8px solid transparent 
            border-bottom 8px solid transparent
            border-left 16px solid #fff
            margin 2px 0 0 10px
            animation: mymove 2s infinite;
            position relative
            
        @keyframes mymove {
            from {left: 0px;}
            to {left: 20px;}
        }
        
previous-btn()
    display flex
    justify-content flex-end
    align-items center
    margin-top 20px
    position relative
    
    &:after
      content ""
      display block
      background-color #fff
      height 20px
      width 1px
      position absolute
      right -25px
      bottom 0
      top 0
      margin auto
    
